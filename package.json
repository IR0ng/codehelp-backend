{
  "name": "codehelp-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "migration:create": "node-pg-migrate create Template -m src/db/migrations -j ts",
    "migration:up": "node-pg-migrate up -m src/db/migrations -j ts --tsconfig ./tsconfig.json -t migration",
    "migration:down": "node-pg-migrate down -m src/db/migrations -j ts --tsconfig ./tsconfig.json -t migration",
    "build": "tsc"
  },
  "dependencies": {
    "@types/pg": "^8.11.6",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "express-validation": "^4.1.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-pg-migrate": "^7.5.2",
    "nodemon": "^3.1.3",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "socket.io": "^4.7.5",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1"
  }
}
